<Window x:Class="TelHai.CS.DotNet.YazanHeib.Repositories.GraphicElements.UpdateSubWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TelHai.CS.DotNet.YazanHeib.Repositories.GraphicElements"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Update Sub Category Window" Height="400" Width="490">
    <Grid Margin="20" Background="WhiteSmoke">


        <!--Welcome Text Stack Panel-->
        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,20,0,30">

            <TextBlock Text="Welcome To Update Sub Category Window" TextAlignment="Center" FontSize="21" FontWeight="Bold" Foreground="#5C6BC0" Margin="0,0,0,5"/>
            <TextBlock Text="Please Add The Id,Name And The Parent Id Of The Category" TextAlignment="Center" Foreground="#8E24AA" Margin="0,0,0,10"/>
        </StackPanel>


        <!--Add the text By User-->
        <TextBlock HorizontalAlignment="Left" Margin="7,102,0,0" TextWrapping="Wrap" Text=" Enter The Sub-Category Id:" VerticalAlignment="Top" Width="176" Height="31" FontSize="12" Background="White"/>
        <TextBox x:Name="UpdateIdTextbox" HorizontalAlignment="Left" Margin="200,102,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Background="White" Height="31" Width="185"/>

        <TextBlock HorizontalAlignment="Left" Margin="7,145,0,0" TextWrapping="Wrap" Text=" Enter The Sub-Category Name:" VerticalAlignment="Top" Width="176" Height="31" FontSize="12" Background="White"/>
        <TextBox x:Name="UpdateNameTextBox" HorizontalAlignment="Left" Margin="200,145,0,0" TextWrapping="Wrap" Text="" Background="White" VerticalAlignment="Top" Height="31" Width="185"/>


        <TextBlock HorizontalAlignment="Left" Margin="7,187,0,0" TextWrapping="Wrap" Text=" Choose The Parent Category ID:" VerticalAlignment="Top" Width="176" Height="31" FontSize="12" Background="White"/>
        <ComboBox x:Name="UpdateparentIdComboBox" HorizontalAlignment="Left" Margin="200,187,0,0" VerticalAlignment="Top" Width="185" Height="31"/>



        <!--Add button Stack Panel-->
        <StackPanel VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,20,0,30">
            <Button Content="📋 Update A Sub - Category" Width="250" Height="40" Click="UpdateBtn_Click" Background="#4DB6AC" Foreground="White" FontWeight="Bold"/>
        </StackPanel>


    </Grid>
</Window>
