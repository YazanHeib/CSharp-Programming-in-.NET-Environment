<Window x:Class="TelHai.CS.DotNet.YazanHeib.Repositories.GraphicElements.UpdateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TelHai.CS.DotNet.YazanHeib.Repositories.GraphicElements"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Update Category Window" Height="400" Width="490">

    <Grid Margin="20" Background="WhiteSmoke">


        <!--Welcome Text Stack Panel-->
        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,20,0,30">

            <TextBlock Text="Welcome To Update Category Window" TextAlignment="Center" FontSize="23" FontWeight="Bold" Foreground="#5C6BC0" Margin="0,0,0,5"/>
            <TextBlock Text="Please Add The Id and Name Of The Category" TextAlignment="Center" Foreground="#8E24AA" Margin="0,0,0,10"/>
        </StackPanel>


        <!--Add the text By User Stack Panel-->
        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,20,0,30">

        </StackPanel>
        <TextBlock HorizontalAlignment="Left" Margin="7,116,0,0" TextWrapping="Wrap" Text=" Enter The Category Id:" VerticalAlignment="Top" Width="176" Height="31" FontSize="12" Background="White"/>
        <TextBox x:Name="updateIdTextbox" HorizontalAlignment="Left" Margin="200,116,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Background="White" Height="31" Width="185"/>

        <TextBlock HorizontalAlignment="Left" Margin="7,159,0,0" TextWrapping="Wrap" Text=" Enter The Category Name:" VerticalAlignment="Top" Width="176" Height="31" FontSize="12" Background="White"/>
        <TextBox x:Name="updateNameTextBox" HorizontalAlignment="Left" Margin="200,159,0,0" TextWrapping="Wrap" Text="" Background="White" VerticalAlignment="Top" Height="31" Width="185"/>


        <!--Add button Stack Panel-->
        <StackPanel VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,20,0,30">
            <Button Content="📋 Update A Category" Width="250" Height="40" Click="updateBtn_Click" Background="#4DB6AC" Foreground="White" FontWeight="Bold"/>
        </StackPanel>


    </Grid>
</Window>