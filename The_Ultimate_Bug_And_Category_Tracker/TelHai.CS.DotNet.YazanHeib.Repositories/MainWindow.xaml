<Window x:Class="TelHai.CS.DotNet.YazanHeib.Repositories.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TelHai.CS.DotNet.YazanHeib.Repositories"
        mc:Ignorable="d"
        Title="Main Window" Height="450" Width="465" Background="WhiteSmoke">

    <Grid Margin="20">


        <!--Welcome Text Stack Panel-->
        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,20,0,30">
            <TextBlock Text="Welcome To Bug Managment Program" TextAlignment="Center" FontSize="22" FontWeight="Bold" Foreground="DarkSlateBlue"/>
            <TextBlock Text="Plaese Choose a Option To Continue" TextAlignment="Center" FontSize="13" Foreground="Gray"/>
        </StackPanel>


        <!--Button's Stack Panel-->
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content=" 🐞 Bug Window" Click="openBugWindow_Click" Width="210" Height="40" Margin="5,7,5,0"
                    Background="#4CAF50" Foreground="White" FontWeight="Bold" BorderThickness="0" Cursor="Hand"/>

            <Button Content=" 📂 Category Window" Click="openCategoryWindow_Click" Width="210" Height="40" Margin="5,7,5,0"
                    Background="#2196F3" Foreground="White" FontWeight="Bold" BorderThickness="0" Cursor="Hand" />

            <Button Content="   💾 Save To File" Click="saveFile_Click" Width="210" Height="40" Margin="5,7,5,0"
          Background="#D32F2F" Foreground="White" FontWeight="Bold" BorderThickness="0" Cursor="Hand" />

            <Button Content=" ❌ Exit" Click="closeApp_Click" Width="210" Height="40" Margin="5,7,5,0"
                   Background="Black" Foreground="White" FontWeight="Bold" BorderThickness="0" Cursor="Hand" />
        </StackPanel>


        <!--All Right Stack Panel-->
        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="20" Orientation="Horizontal" >
            <TextBlock Text="©" FontSize="16" FontWeight="Bold" Foreground="Black"/>
            <TextBlock Text="  2025 All Rights Is Reserved" FontSize="14" Foreground="Gray" VerticalAlignment="Center"/>
        </StackPanel>


    </Grid>
</Window>